<h2>Shop</h2>
<div class="row">
    {{#each products}}
        <div class="col s12 m3">
            <div class="card" id="{{@index}}">
                <div class="card-image">
                    <img alt="image" src="data:image/png;base64,{{this.picture}}" width="250" height="250">
                    <button onclick="document.cookie = `${document.cookie.length === 0 ? document.cookie.length : document.cookie.split('=').length - 1}={{this._id}}`;console.log(document.cookie);alert('Added!')" class="btn-floating halfway-fab waves-effect waves-light red"><i class="large material-icons">+</i></button>
                </div>
                <div class="card-content">
                    <span class="card-title">{{this.name}}</span>
                    <span class="grey-text">{{this.shopName}}</span>
                    <p>{{this.price}}$</p>
                </div>
            </div>
        </div>
    {{/each}}
</div>

